<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monthly Payments | NDA</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <style>
        .month-card {
            transition: all 0.3s ease;
        }
        .month-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .paid-status {
            background-color: #ecfdf5;
            border-color: #d1fae5;
        }
        .pending-status {
            background-color: #fff7ed;
            border-color: #ffedd5;
        }
        .upcoming-status {
            background-color: #f3f4f6;
            border-color: #e5e7eb;
        }
    </style>
</head>
<body class="min-h-screen bg-gray-50 p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div class="flex items-center">
                <img class="w-12 h-12 rounded-full bg-gray-200" src="../images/pfp_final_1.png" alt="Profile">
                <span class="ml-3 text-2xl font-bold text-gray-800"><%= user.name %></span>
            </div>
            <a href="/accounts" class="text-purple-600 hover:text-purple-800 font-medium flex items-center">
                <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to Payment Options
            </a>
        </div>

        <!-- Monthly Payment Section -->
        <div id="monthlyPaymentSection">
            <div class="bg-white rounded-xl shadow-md p-6 mb-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Monthly Payment Plan</h2>
                <div class="flex flex-col md:flex-row md:items-center justify-between">
                    <div>
                        <p class="text-gray-600 mb-2">You are on the monthly payment plan.</p>
                        <p class="font-medium text-gray-800">₹800 per month</p>
                    </div>
                    <button class="mt-4 md:mt-0 bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-6 rounded-lg transition-colors duration-300"
        data-action="pay-monthly"
                data-month="<%= paymentHistory.pending[0] ? paymentHistory.pending[0].name : '' %>"
                <%= paymentHistory.pending[0] ? '' : 'disabled' %>>
            <%= paymentHistory.pending[0] ? 'Make Payment' : 'No Payment Due' %>
            </button>
                </div>
            </div>

            <h3 class="text-xl font-semibold text-gray-800 mb-4">Payment History</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
                <!-- Paid Month Card -->
                <div class="month-card bg-white rounded-lg shadow-sm overflow-hidden border-l-4 paid-status">
                    <div class="p-4">
                        <div class="flex justify-between items-center mb-3">
                            <h4 class="font-semibold text-gray-800">January 2025</h4>
                            <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Paid</span>
                        </div>
                        <div class="text-sm text-gray-600">
                            <p>Paid on: Jan 5, 2025</p>
                            <p>Amount: ₹800</p>
                            <p>Transaction ID: TXN123456</p>
                        </div>
                        <button class="mt-3 w-full bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-medium py-1.5 rounded transition-colors duration-300">
                            View Receipt
                        </button>
                    </div>
                </div>

                <!-- Pending Month Card -->
                <% paymentHistory.paid.forEach(month => { %>
                    <div class="month-card bg-white rounded-lg shadow-sm overflow-hidden border-l-4 paid-status">
                        <div class="p-4">
                            <div class="flex justify-between items-center mb-3">
                                <h4 class="font-semibold text-gray-800"><%= month.fullName %></h4>
                                <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Paid</span>
                            </div>
                            <div class="text-sm text-gray-600">
                                <p>Paid on: <%= month.paymentDate.toLocaleDateString() %></p>
                                <p>Amount: ₹<%= month.amount %></p>
                                <p>Transaction ID: <%= month.transactionId %></p>
                            </div>
                            <button class="mt-3 w-full bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-medium py-1.5 rounded transition-colors duration-300">
                                View Receipt
                            </button>
                        </div>
                    </div>
                <% }); %>

                <!-- Upcoming Month Card -->
                <div class="month-card bg-white rounded-lg shadow-sm overflow-hidden border-l-4 upcoming-status">
                    <div class="p-4">
                        <div class="flex justify-between items-center mb-3">
                            <h4 class="font-semibold text-gray-800">March 2025</h4>
                            <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs font-medium rounded-full">Upcoming</span>
                        </div>
                        <div class="text-sm text-gray-600">
                            <p>Due date: Mar 5, 2025</p>
                            <p>Amount: ₹800</p>
                            <p>Status: Not yet due</p>
                        </div>
                        <button class="mt-3 w-full bg-gray-200 hover:bg-gray-300 text-gray-700 text-sm font-medium py-1.5 rounded transition-colors duration-300 cursor-not-allowed" disabled>
                            Pay Early
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="bg-gray-100 rounded-lg p-5">
                <h3 class="text-lg font-semibold text-gray-800 mb-3">Payment Information</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <p class="text-sm text-gray-600 mb-1">Payment Method</p>
                        <div class="flex items-center">
                            <svg class="w-8 h-8 mr-2 text-blue-600" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M22 4H2C0.9 4 0 4.9 0 6V18C0 19.1 0.9 20 2 20H22C23.1 20 24 19.1 24 18V6C24 4.9 23.1 4 22 4ZM22 18H2V6H22V18Z" />
                                <path d="M3 11H7V13H3V11ZM8 11H12V13H8V11ZM13 11H17V13H13V11Z" />
                            </svg>
                            <span class="font-medium text-gray-800">•••• •••• •••• 4242</span>
                        </div>
                    </div>
                    
                </div>
                <div class="flex mt-4">
                    <button class="text-purple-600 hover:text-purple-800 text-sm font-medium mr-4 flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                        </svg>
                        Update Payment Method
                    </button>
                    <button class="text-purple-600 hover:text-purple-800 text-sm font-medium flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                        </svg>
                        Download All Receipts
                    </button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  // Set Razorpay key for use in payment.js
  const RAZORPAY_KEY_ID = "<%= process.env.RAZORPAY_KEY_ID %>";
  
  // Hidden user info for Razorpay prefill
  document.write(`
    <input type="hidden" id="userName" value="<%= user.name %>">
    <input type="hidden" id="userEmail" value="<%= user.email %>">
  `);
</script>
<script src="../javascripts/payment.js"></script>
</body>
</html>
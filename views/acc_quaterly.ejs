<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quarterly Payments | NDA</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <style>
        .quarterly-card {
            transition: all 0.3s ease;
        }
        .quarterly-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .paid-status {
            background-color: #ecfdf5;
            border-color: #d1fae5;
        }
        .pending-status {
            background-color: #fff7ed;
            border-color: #ffedd5;
        }
        .upcoming-status {
            background-color: #f3f4f6;
            border-color: #e5e7eb;
        }
    </style>
</head>
<body class="min-h-screen bg-gray-50 p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div class="flex items-center">
                <img class="w-12 h-12 rounded-full bg-gray-200" src="<%= user.profilePicture %>" alt="Profile">
                <span class="ml-3 text-2xl font-bold text-gray-800"><%= user.name %></span>
            </div>
            <a href="/accounts" class="text-purple-600 hover:text-purple-800 font-medium flex items-center">
                <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to Payment Options
            </a>
        </div>

        <!-- Quarterly Payment Section -->
        <div id="quarterlyPaymentSection">
            <div class="bg-white rounded-xl shadow-md p-6 mb-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Quarterly Payment Plan</h2>
                <div class="flex flex-col md:flex-row md:items-center justify-between">
                    <div>
                        <p class="text-gray-600 mb-2">You are on the quarterly payment plan.</p>
                        <p class="font-medium text-gray-800">₹2,400 every three months</p>
                       
                    </div>
                    <button class="mt-4 md:mt-0 bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-6 rounded-lg transition-colors duration-300"
                        data-action="pay-quarterly"
                        data-quarter="<%= pendingQuarters[0] ? pendingQuarters[0].quarter : '' %>"
                        <%= pendingQuarters[0] ? '' : 'disabled' %>>
                        <%= pendingQuarters[0] ? 'Make Payment' : 'No Payment Due' %>
                    </button>
                </div>
            </div>

            <h3 class="text-xl font-semibold text-gray-800 mb-4">Payment History</h3>
            
            <div class="grid grid-cols-1 gap-4 mb-8">
                <!-- Paid Quarters -->
                <% paidQuarters.forEach(quarter => { %>
                    <div class="quarterly-card bg-white rounded-lg shadow-sm overflow-hidden border-l-4 paid-status">
                        <div class="p-5">
                            <div class="flex justify-between items-center mb-3">
                                <h4 class="font-semibold text-gray-800"><%= quarter.label %></h4>
                                <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Paid</span>
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div class="text-sm text-gray-600">
                                    <p>Paid on: <%= quarter.paymentDate.toLocaleDateString() %></p>
                                    <p>Amount: ₹<%= quarter.amount %></p>
                                    <p>Transaction ID: <%= quarter.transactionId %></p>
                                    <p>Coverage: <%= quarter.periodStart.toLocaleDateString() %> - <%= quarter.periodEnd.toLocaleDateString() %></p>
                                </div>
                                <div class="bg-gray-50 rounded p-3">
                                    <h5 class="font-medium text-gray-700 mb-2">Months Covered</h5>
                                    <div class="flex flex-wrap gap-2">
                                        <% quarter.monthsCovered.forEach(month => { %>
                                            <span class="inline-block px-3 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full"><%= month %></span>
                                        <% }); %>
                                    </div>
                                </div>
                            </div>
                            <div class="flex mt-4">
                                <button class="bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-medium py-1.5 px-4 rounded transition-colors duration-300 mr-3">
                                    View Receipt
                                </button>
                                <button class="bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-medium py-1.5 px-4 rounded transition-colors duration-300">
                                    Download Invoice
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>

                <!-- Pending Quarters -->
                <% pendingQuarters.forEach(quarter => { %>
                    <div class="quarterly-card bg-white rounded-lg shadow-sm overflow-hidden border-l-4 pending-status">
                        <div class="p-5">
                            <div class="flex justify-between items-center mb-3">
                                <h4 class="font-semibold text-gray-800"><%= quarter.label %></h4>
                                <span class="px-2 py-1 bg-orange-100 text-orange-800 text-xs font-medium rounded-full">Pending</span>
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div class="text-sm text-gray-600">
                                    <p>Due date: <%= quarter.dueDate.toLocaleDateString() %></p>
                                    <p>Amount: ₹<%= quarter.amount %></p>
                                    <p>Status: Payment initiated</p>
                                    <p>Coverage: <%= quarter.periodStart.toLocaleDateString() %> - <%= quarter.periodEnd.toLocaleDateString() %></p>
                                </div>
                                <div class="bg-gray-50 rounded p-3">
                                    <h5 class="font-medium text-gray-700 mb-2">Months Covered</h5>
                                    <div class="flex flex-wrap gap-2">
                                        <% quarter.monthsCovered.forEach(month => { %>
                                            <span class="inline-block px-3 py-1 bg-orange-100 text-orange-800 text-xs font-medium rounded-full"><%= month %></span>
                                        <% }); %>
                                    </div>
                                </div>
                            </div>
                            <div class="flex mt-4">
                                <button class="bg-purple-600 hover:bg-purple-700 text-white text-sm font-medium py-1.5 px-4 rounded transition-colors duration-300"
                                    data-action="pay-quarterly"
                                    data-quarter="<%= quarter.quarter %>">
                                    Complete Payment
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>

                <!-- Upcoming Quarters -->
                <% upcomingQuarters.forEach(quarter => { %>
                    <div class="quarterly-card bg-white rounded-lg shadow-sm overflow-hidden border-l-4 upcoming-status">
                        <div class="p-5">
                            <div class="flex justify-between items-center mb-3">
                                <h4 class="font-semibold text-gray-800"><%= quarter.label %></h4>
                                <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs font-medium rounded-full">Upcoming</span>
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div class="text-sm text-gray-600">
                                    <p>Due date: <%= quarter.dueDate.toLocaleDateString() %></p>
                                    <p>Amount: ₹<%= quarter.amount %></p>
                                    <p>Status: Not yet due</p>
                                    <p>Coverage: <%= quarter.periodStart.toLocaleDateString() %> - <%= quarter.periodEnd.toLocaleDateString() %></p>
                                </div>
                                <div class="bg-gray-50 rounded p-3">
                                    <h5 class="font-medium text-gray-700 mb-2">Months Covered</h5>
                                    <div class="flex flex-wrap gap-2">
                                        <% quarter.monthsCovered.forEach(month => { %>
                                            <span class="inline-block px-3 py-1 bg-gray-100 text-gray-600 text-xs font-medium rounded-full"><%= month %></span>
                                        <% }); %>
                                    </div>
                                </div>
                            </div>
                            <div class="flex mt-4">
                                
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            
            <!-- Payment Schedule Table -->
            <div class="bg-white rounded-lg shadow-sm p-5 mb-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-3">Payment Schedule</h3>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead>
                            <tr>
                                <th class="px-4 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quarter</th>
                                <th class="px-4 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Due Date</th>
                                <th class="px-4 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                                <th class="px-4 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% paymentSchedule.forEach(quarter => { %>
                                <tr>
                                    <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-800"><%= quarter.label %></td>
                                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600"><%= quarter.dueDate.toLocaleDateString() %></td>
                                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600">₹<%= quarter.amount %></td>
                                    <td class="px-4 py-3 whitespace-nowrap">
                                        <span class="px-2 py-1 <%= quarter.status === 'paid' ? 'bg-green-100 text-green-800' : quarter.status === 'pending' ? 'bg-orange-100 text-orange-800' : 'bg-gray-100 text-gray-800' %> text-xs font-medium rounded-full">
                                            <%= quarter.status.charAt(0).toUpperCase() + quarter.status.slice(1) %>
                                        </span>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!-- Payment Information -->
            <div class="bg-gray-100 rounded-lg p-5">
                <h3 class="text-lg font-semibold text-gray-800 mb-3">Payment Information</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    
                    </div>
                </div>
                <div class="flex mt-4">
                    <button class="text-purple-600 hover:text-purple-800 text-sm font-medium mr-4 flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                        </svg>
                        Update Payment Method
                    </button>
                    <button id="switchPlanButton" 
                        data-current-plan="quarterly"
                        class="text-purple-600 hover:text-purple-800 text-sm font-medium mr-4 flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        Switch to Monthly Plan
                    </button>
                    <button class="text-purple-600 hover:text-purple-800 text-sm font-medium flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                        </svg>
                        Download All Receipts
                    </button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
        // Set Razorpay key for use in payment.js
        const RAZORPAY_KEY_ID = "<%= process.env.RAZORPAY_KEY_ID %>";
        
        // Hidden user info for Razorpay prefill
        document.write(`
            <input type="hidden" id="userName" value="<%= user.name %>">
            <input type="hidden" id="userEmail" value="<%= user.email %>">
        `);
    </script>
    <script src="../javascripts/payment.js"></script>
</body>
</html>